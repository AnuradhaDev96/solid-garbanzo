@model IEnumerable<Trophy>
@{
    ViewData["Title"] = "Index";
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container">
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav flex-grow-1">
                <li>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Trophy" asp-action="Index">Trophies</a>
                </li>
                <li>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Auction" asp-action="Index">Auctions</a>
                </li>
                <li>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Player" asp-action="Index">Players</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Trophy List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-area="" asp-controller="Trophy" asp-action="Create"><i class="bi bi-plus-circle"></i> &nbsp; Create New Trophy</a>
        </div>
    </div>
</div>
<br />
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Trophy Name
            </th>
            <th>
                Description
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.TrophyName
                </td>
                <td width="30%">
                    @obj.TrophyDescription
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-controller="Trophy" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a class="btn btn-danger mx-2" asp-controller="Trophy" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

