@model Player

<form method="post" asp-action="Signin">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Sign In to Auction System</h2>
        </div>

        @* Custom validations from server side also can be shown here. *@
        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            @* Client side validation *@
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            @* Client side validation *@
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" type="submit" style="width:150px">SignIn</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to Home</a>
    </div>
</form>

