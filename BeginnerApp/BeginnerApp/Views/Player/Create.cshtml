@model Player

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Player</h2>
        </div>

        @* Custom validations from server side also can be shown here. *@
        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            @* Client side validation *@
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            @* Client side validation *@
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            @* Client side validation *@
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Gender"></label>
            <input asp-for="Gender" class="form-control" />
            @* Client side validation *@
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PlayRole"></label>
            <input asp-for="PlayRole" class="form-control" />
            @* Client side validation *@
            <span asp-validation-for="PlayRole" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            @* Client side validation *@
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            @* Client side validation *@
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" type="submit" style="width:150px">Create</button>
        <a asp-controller="Player" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

