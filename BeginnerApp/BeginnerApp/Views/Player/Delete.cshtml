@model Player

@* Uses the action name given in the DeletePost method in the category controller *@
<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Trophy</h2>
        </div>

        <div class="mb-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Gender"></label>
            <input asp-for="Gender" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="PlayRole"></label>
            <input asp-for="PlayRole" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" disabled />
        </div>
        <button class="btn btn-danger" type="submit" style="width:150px">Delete</button>
        <a asp-controller="Trophy" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

